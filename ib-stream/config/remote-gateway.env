# Remote IB Gateway Configuration
# Connect to IB Gateway running on 192.168.0.60

# Server Configuration - uses instance-specific ports
PORT=${IB_STREAM_PORT:-8003}
HOST=0.0.0.0

# TWS Connection - Remote Gateway - uses instance-specific client IDs
IB_STREAM_CLIENT_ID=${IB_STREAM_CLIENT_ID:-151}
IB_CONTRACTS_CLIENT_ID=${IB_CONTRACTS_CLIENT_ID:-152}
IB_STREAM_HOST=192.168.0.60
IB_STREAM_PORTS=4002

# Storage Configuration
IB_STREAM_STORAGE_PATH=storage
IB_STREAM_ENABLE_STORAGE=true
IB_STREAM_ENABLE_JSON=true
IB_STREAM_ENABLE_PROTOBUF=true
IB_STREAM_ENABLE_POSTGRES=true

# Tracked Contracts (can be configured as needed)
# Format: contract_id:symbol:tick_types:buffer_hours
IB_STREAM_TRACKED_CONTRACTS=711280073:MNQ:bid_ask;last:2

# Performance Settings
IB_STREAM_MAX_STREAMS=50
IB_STREAM_BUFFER_SIZE=100
IB_STREAM_CONNECTION_TIMEOUT=10
IB_STREAM_RECONNECT_ATTEMPTS=5

# Logging
IB_STREAM_LOG_LEVEL=INFO