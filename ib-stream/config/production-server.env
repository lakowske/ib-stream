# Production Server Configuration (192.168.0.60)
# This is the main production server where all market data is recorded
# Use this configuration when running ON the production server itself

# Server Configuration - uses instance-specific ports
PORT=${IB_STREAM_PORT:-8001}
HOST=0.0.0.0

# TWS Connection - Local Gateway - uses instance-specific client IDs
IB_STREAM_CLIENT_ID=${IB_STREAM_CLIENT_ID:-100}
IB_CONTRACTS_CLIENT_ID=${IB_CONTRACTS_CLIENT_ID:-101}
IB_STREAM_HOST=localhost
IB_STREAM_PORTS=4002

# Storage Configuration - FULL PRODUCTION STORAGE
IB_STREAM_STORAGE_PATH=storage
IB_STREAM_ENABLE_STORAGE=true
IB_STREAM_ENABLE_JSON=true
IB_STREAM_ENABLE_PROTOBUF=true
IB_STREAM_ENABLE_POSTGRES=true
IB_STREAM_ENABLE_METRICS=true
IB_STREAM_ENABLE_CLIENT_STREAM_STORAGE=true

# Background Streaming Configuration
IB_STREAM_ENABLE_BACKGROUND_STREAMING=true
IB_STREAM_BACKGROUND_RECONNECT_DELAY=30

# Tracked Contracts - Main production contracts
# Format: contract_id:symbol:tick_types:buffer_hours
IB_STREAM_TRACKED_CONTRACTS=711280073:MNQ:bid_ask;last:24

# Performance Settings - Production optimized
IB_STREAM_MAX_STREAMS=100
IB_STREAM_BUFFER_SIZE=1000
IB_STREAM_CONNECTION_TIMEOUT=30
IB_STREAM_RECONNECT_ATTEMPTS=10

# Logging - Production level
IB_STREAM_LOG_LEVEL=INFO

# Environment identifier
IB_STREAM_ENVIRONMENT=production-server
IB_STREAM_SERVER_TYPE=production

# Database Configuration (if using PostgreSQL)
IB_STREAM_POSTGRES_HOST=localhost
IB_STREAM_POSTGRES_PORT=5432
IB_STREAM_POSTGRES_DB=ib_stream_production
IB_STREAM_POSTGRES_USER=ib_stream